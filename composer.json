{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "influenceme/crm",
    "type": "project",
    "description": "InfluenceME CRM application.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "facebook/php-business-sdk": "^24.0.1",
        "laravel/fortify": "^1.34.1",
        "laravel/framework": "^12.52",
        "laravel/horizon": "^5.44",
        "laravel/pulse": "^1.5",
        "laravel/socialite": "^5.24.2",
        "laravel/telescope": "^5.17",
        "laravel/tinker": "^2.11.1",
        "livewire/flux": "^2.12.1",
        "livewire/flux-pro": "^2.12.1",
        "livewire/livewire": "^4.1.4",
        "sentry/sentry-laravel": "^4.20.1",
        "socialiteproviders/tiktok": "^5.2",
        "socialiteproviders/twitch": "^5.4",
        "symfony/http-client": "^8.0.5",
        "symfony/postmark-mailer": "^8.0.4"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^4.0.9",
        "fakerphp/faker": "^1.24.1",
        "laravel/boost": "^2.1.8",
        "laravel/pail": "^1.2.6",
        "laravel/pint": "^1.27.1",
        "laravel/sail": "^1.53",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.9.1",
        "pestphp/pest": "^4.4.1",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
        ],
        "lint": [
            "pint --parallel"
        ],
        "test:lint": [
            "pint --parallel --test"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@test:lint",
            "@php artisan test"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan boost:update --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "ext-pcntl": "0",
            "ext-posix": "0"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [{
        "name": "flux-pro",
        "type": "composer",
        "url": "https://composer.fluxui.dev"
    }]
}
